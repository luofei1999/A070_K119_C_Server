<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.devices.mapper.DeviceInfoMapper">
    
    <resultMap type="DeviceInfo" id="DeviceInfoResult">
        <result property="id"    column="id"    />
        <result property="groupId"    column="group_id"    />
        <result property="deviceNumber"    column="device_number"    />
        <result property="status"    column="status"    />
        <result property="userName"    column="user_name"    />
        <result property="communicationTime"    column="communication_time"    />
        <result property="simCardNumber"    column="sim_card_number"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDeviceInfoVo">
        select id, group_id, device_number, status, user_name, communication_time, sim_card_number, remark from device_info
    </sql>

    <select id="selectDeviceInfoList" parameterType="DeviceInfo" resultMap="DeviceInfoResult">
        <include refid="selectDeviceInfoVo"/>
        <where>  
            <if test="deviceNumber != null  and deviceNumber != ''"> and device_number = #{deviceNumber}</if>
            <if test="groupId != null  and groupId != ''"> and group_id = #{groupId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="simCardNumber != null  and simCardNumber != ''"> and sim_card_number like concat('%', #{simCardNumber}, '%')</if>
        </where>
    </select>
    
    <select id="selectDeviceInfoById" parameterType="Long" resultMap="DeviceInfoResult">
        <include refid="selectDeviceInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertDeviceInfo" parameterType="DeviceInfo" useGeneratedKeys="true" keyProperty="id">
        insert into device_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">group_id,</if>
            <if test="deviceNumber != null and deviceNumber != ''">device_number,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="userName != null">user_name,</if>
            <if test="communicationTime != null">communication_time,</if>
            <if test="simCardNumber != null">sim_card_number,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">#{groupId},</if>
            <if test="deviceNumber != null and deviceNumber != ''">#{deviceNumber},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="userName != null">#{userName},</if>
            <if test="communicationTime != null">#{communicationTime},</if>
            <if test="simCardNumber != null">#{simCardNumber},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDeviceInfo" parameterType="DeviceInfo">
        update device_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupId != null and groupId != ''">group_id = #{groupId},</if>
            <if test="deviceNumber != null and deviceNumber != ''">device_number = #{deviceNumber},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="communicationTime != null">communication_time = #{communicationTime},</if>
            <if test="simCardNumber != null">sim_card_number = #{simCardNumber},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDeviceInfoById" parameterType="Long">
        delete from device_info where id = #{id}
    </delete>

    <delete id="deleteDeviceInfoByIds" parameterType="String">
        delete from device_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>